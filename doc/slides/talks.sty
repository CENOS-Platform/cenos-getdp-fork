% -------------------------------------------------------------------
% Background
% -------------------------------------------------------------------

\def\background#1#2#3{%
  \global\def\mybackgroundx{#1}%
  \global\def\mybackgroundy{#2}%
  \global\def\mybackgroundimage{#3}%
}
\newslideframe{mybackground}{%
  \ifx\mybackgroundimage\undefined
    \boxput{\rput(0,0){}}{#1}
  \else
    \boxput
     {\rput(\mybackgroundx,\mybackgroundy){\mybackgroundimage}}
     {#1}%
  \fi
}


