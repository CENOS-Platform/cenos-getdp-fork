% -------------------------------------------------------------------
% Personal macros for titles, parts, chapters, ...
% -------------------------------------------------------------------

\newcount\fulltitle
\fulltitle=1

\newcounter{chapterstart}
\setcounter{chapterstart}{1}
\newcounter{chapterslide}
\setcounter{chapterslide}{1}

\def\mytalktitle{}
\def\talk#1{%
 \global\def\mytalktitle{#1}%
 \sffamily%
 \def\topstring{\makebox[\textwidth][l]{%
    \rule[-1em]{\textwidth}{.1\semcm}\hspace*{-\textwidth}%
    \textbf{\hfill\color{coltitle}\sffamily\Large%
            \mychaptertitle\hfill%
            \ifnum \c@slide>\c@chapterstart%
              \addtocounter{chapterslide}{1}%
              \makebox[0ex][r]{(\thechapterslide)}\fi%
            }%
    }%
 }
 \def\toprule{\makebox[\textwidth][l]{\rule[-1em]{\textwidth}{.1\semcm}}}
 \def\bottomstring{\color{colbottom}\sffamily\tiny\mytalktitle\hfill%
                   \sffamily\tiny\myparttitle~\theslide}%
 \newpagestyle{full}{\topstring}{\bottomstring}%
 \newpagestyle{top}{\topstring}{}%
 \newpagestyle{bottom}{\toprule}{\bottomstring}%
 \newpagestyle{none}{\toprule}{}%
 \slidepagestyle{full}%
 \slideframe*{mybackground}%
}

\def\myparttitle{}
\def\part#1{\global\def\myparttitle{#1}\setcounter{slide}{0}}

\def\mychaptertitle{}
\def\chapter#1{\global\def\mychaptertitle{#1}%
               \setcounter{chapterstart}{\c@slide}\addtocounter{chapterstart}{1}%
               \setcounter{chapterslide}{1}}

\def\bigtitle#1{\textbf{\Large\sffamily\color{coltitle} #1}}
\def\mediumtitle#1{\textmd{\small\sffamily\color{colbottom} #1}}
\def\smalltitle#1{\textmd{\footnotesize\sffamily\color{colbottom} #1}}

% -------------------------------------------------------------------
% New figure environments
% -------------------------------------------------------------------

\newlength{\ltwofig}\setlength{\ltwofig}{9\semcm}
\newcommand{\slidefig}[4]{
  \begin{center}
  \begin{tabular}{c@{\hspace{2\semcm}}c}
  \includegraphics[angle=-90,width=\ltwofig,clip]{#1} &
  \includegraphics[angle=-90,width=\ltwofig,clip]{#3} \\
  \parbox[t]{\ltwofig}{\center\scriptsize #2} &
  \parbox[t]{\ltwofig}{\center\scriptsize #4}
  \end{tabular}
  \end{center}}%

\newlength{\lfourfig}\setlength{\lfourfig}{7.75\semcm}
\newcommand{\slidefigs}[3]{
  \begin{center}
  \begin{tabular}{c@{\hspace{2\semcm}}c}
  \includegraphics[angle=-90,width=\ltwofig,clip]{#1} &
  \includegraphics[angle=-90,width=\ltwofig,clip]{#3} \\
  \multicolumn{2}{c}{\scriptsize #2}
  \end{tabular}
  \end{center}}%


